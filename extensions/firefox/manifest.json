{
  "manifest_version": 2,
  "name": "RealityCheck â€“ AI Content Watermarker",
  "version": "1.0.0",
  "description": "Detects and watermarks likely AI-generated images, videos, and text in your browser.",
  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "RealityCheck",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "realitycheck@example.com",
      "strict_min_version": "109.0"
    }
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
